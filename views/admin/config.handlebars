
<script src="/js/bootstrap-datepicker.js"></script>
<link href="/css/datepicker3.css" rel="stylesheet">

<div class="container">
 	
	<section>
		<div id="section-config">
			<h2>Configuration </h2>
		</div>

		<div class="col-lg-8">

			<div id="config-form" class="register-form">
			
				<ul class="nav-panel">
			        {{#each message}}
			            <li>{{this}}</li>
			        {{/each}}
				</ul> 

				<form class="form-horizontal" role="form" action="/config" method="post">
			      <input name="_method" type="hidden" value="PUT">

				  <div class="form-group">
				    <label for="startDate" class="col-sm-2 control-label">Start Date</label>
				    <div class="col-sm-6">
						<div class="input-group date">
						  <input type="text" class="form-control datepicker" data-date-format="mm/dd/yyyy" name="startDate" value="{{formatDate this.config.startDate "short"}}">
						  	<span class="input-group-addon">
						  		<i class="glyphicon glyphicon-th"></i>
					  		</span>
						</div>					      
				    </div>
				  </div> 
				  <div class="form-group">
				    <div class="col-sm-offset-2 col-sm-10">
				      <button id="save-btn" type="submit" class="btn btn-default">Save</button>
				    </div>
				  </div>
				</form>

			</div>

		</div>

	</section>

</div> 	

<script>
	var ConfigForm = { 
		
	    setupActions: function(){

	        $('#config-form').on('click', '#save-btn', function(e){
	              $("#config-form").submit();
	        }); 

		}		
	}

	$(function () {
	    ConfigForm.setupActions();

		$('.datepicker').datepicker({
			autoclose: true,
    		todayHighlight: true			
		});

	});

</script>	



